// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String    @id @default(uuid())
  fullname  String    @db.VarChar(128)
  email     String?   @db.VarChar(128)
  whatsapp  String    @db.Char(11)
  gender    Gender
  createdAt DateTime  @default(now())

  results   Results[]
  quizzes   Quizzes[]
}

enum Gender {
  MASCULINO
  FEMININO
  TRANS
  OUTROS
  DESCONHECIDO
}

model Results {
  id          String    @id @default(uuid())
  methodology String    @db.VarChar(64)
  level       Int
  stage       Int
  needs       String    @db.VarChar(256)
  date        DateTime  @default(now())
  sessionCode String    @db.VarChar(32)
  // quizzes     Quizzes[]

  user        Users     @relation(fields: [userId], references: [id])
  userId      String
}

model Quizzes {
  id          String   @id @default(uuid())
  question    String   @db.VarChar(256)
  answer      String   @db.VarChar(256)
  date        DateTime @default(now())
  sessionCode String   @db.VarChar(32)

  user     Users    @relation(fields: [userId], references: [id])
  userId   String

  // result   Results?  @relation(fields: [resultId], references: [id])
  // resultId String?
}